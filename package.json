{
  "name": "nodejs-docker-web-app",
  "version": "1.0.0",
  "description": "Node.js app on docker container",
  "main": "server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "compress": "tsc && uglifyjs ./build/app.js -o ./build/app.min.js --compress --mangle",
    "build": "npm run compress && --watch & nodemon ./build/app.min.js",
    "start": "node server.js",
    "dev": "npx tsc && nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Dipesh Malvia",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.13.0",
    "mongoose": "^8.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.7.3"
  }
}
